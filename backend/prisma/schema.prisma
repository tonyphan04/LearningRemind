generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LearningItem {
  id         Int        @id @default(autoincrement())
  topic      String
  goal       String[]
  resources  String[]
  startDay   DateTime
  createdAt  DateTime   @default(now())
  reviews    ReviewTask[]
}

model ReviewTask {
  id          Int        @id @default(autoincrement())
  intervalDay Int
  item        LearningItem @relation(fields: [itemId], references: [id])
  itemId      Int
}

